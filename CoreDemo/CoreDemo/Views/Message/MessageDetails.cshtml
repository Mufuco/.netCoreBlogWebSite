@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Detaylı Mesaj Sayfası</h1>
@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
   
        {
            @Html.HiddenFor(x => x.MessageID, new { @class = "form-control" })
            <br />
            @Html.Label("Mesaj Başlığı")
            @Html.TextBoxFor(x => x.Subject, new { disabled = "disabled", @class = "form-control" })
            <br />
            @Html.Label("Mesaj İçeriği")
            @Html.TextAreaFor(x => x.MessageDetails, 24, 3, new { @class = "form-control", disabled = "disabled" })
            <br />
        
        <button class="btn btn-dark">Mesajlara Dön</button>
    }


