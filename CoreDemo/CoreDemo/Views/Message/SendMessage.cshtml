@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj Gönder</h1>
<br />
@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{

    @Html.Label("Alıcı")
    @*@Html.TextBoxFor(x => x.re, new { @class = "form-control" })*@
    <input type="text" class="form-control" />
    <br />
    @Html.Label("Konu ")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x => x.MessageDetails, 15, 3, new { @class = "form-control" })

    <button class="btn btn-inverse-success">Gönder</button>

}
