@model UserUpdateViewModel

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Ayarları</h4>
            <br />
            <p class="card-description"> Yazar profil bilgilerinizi buradan düzenleyebilirsiniz. </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">İsim Soyisim </label>
                    <input type="text" asp-for="@Model.namesurname" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı adı </label>
                    <input type="text" asp-for="@Model.username" class="form-control" />

                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="text" asp-for="@Model.mail" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Resim Yolu</label>
                    <input type="text" asp-for="@Model.imageurl" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName1"> Şifre </label>
                    <input type="password" asp-for="@Model.password" class="form-control" />

                </div>



                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <button asp-action="Index"  asp-controller="Dashboard" class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>

